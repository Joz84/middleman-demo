<% cities = data.cities %>

<div class="container text-center">
  <h1>Cities</h1>
    <div class="row">

      <% cities.each do |city| %>
        <div class="col-md-4">

          <div class="card" style="background-image: url(https://kitt.lewagon.com/placeholder/cities/<%= city[:name].downcase %>)">
            <h1><%= city[:name] %></h1>
            <p><%= city[:address] %></p>
          </div>
        </div>

      <% end %>
    </div>

</div>

